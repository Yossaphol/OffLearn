<VBox fx:id="roadmap_node" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Student.roadmap.roadmapnodecontroller">
   <children>
      <HBox fx:id="roadmap_node_node_box" alignment="CENTER" maxWidth="150.0" prefHeight="50.0" prefWidth="150.0" style="-fx-border-color: Purple;">
         <children>
            <Label fx:id="roadmap_node_header" alignment="CENTER" contentDisplay="CENTER" prefHeight="22.0" prefWidth="170.0" text="Mathematics">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="roadmap_node_discription" prefHeight="20.0" prefWidth="412.0" text="Linear algebra, Calculus, Mathematical analysis, Differential Calculus">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <HBox fx:id="roadmap_node_button_box" alignment="CENTER" maxWidth="100.0" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #8100CC; -fx-background-radius: 30;" stylesheets="@../../../css/Home.css">
