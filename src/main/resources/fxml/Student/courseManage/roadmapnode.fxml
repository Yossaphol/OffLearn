            <Button fx:id="roadmap_node_button" mnemonicParsing="false" style="-fx-background-color: transparent;" text="คอร์ส" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </HBox>
   </children>
</VBox>
